<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8 login-box">
      <div class="col-lg-12 login-key">
        <i class="fa fa-key" aria-hidden="true"></i>
      </div>
      <div class="col-lg-12 login-title">
        Register
      </div>
      {{> message}}
      <div class="col-lg-12 login-form">
        <div class="col-lg-12 login-form">
          <form action="/users/register" method="POST" autocomplete="on">
            <div class="form-group">
              <label for="name" class="form-control-label">Name</label>
              <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name" value="{{name}}">
            </div>
            <div class="form-group">
              <label for="email" class="form-control-label">EMAIL</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter Email"
                value="{{email}}">
            </div>
            <div class="form-group">
              <label for="password" class="form-control-label">PASSWORD</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password"
                value="{{password}}">
            </div>
            <div class="form-group">
              <label for="confirmPassword" class="form-control-label">CONFIRM PASSWORD</label>
              <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                placeholder="Confirm Password" value="{{confirmPassword}}">
            </div>
            <button type="submit" class="mb-3 btn btn-outline-warning btn-block">Register</button>
            <a href="/auth/facebook" class="btn btn-outline-info btn-block">Facebook Login</a>
          </form>
          <p class="lead mt-4" id="register-link">
            Have An Account ? <a href="/users/login">Login</a>
          </p>
        </div>
      </div>
      <div class="col-lg-3 col-md-2"></div>
    </div>
  </div>